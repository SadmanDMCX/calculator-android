<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <stroke
                android:color="@color/cWhite"
                android:width="1dp" />
            <solid android:color="@color/cDKViolate" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <stroke
                android:color="@color/cBlack"
                android:width="1dp" />
            <gradient
                android:startColor="@color/cDKViolate"
                android:endColor="@color/cBlack"
                android:type="radial"
                android:gradientRadius="250dp"
                />
        </shape>
    </item>

</selector>